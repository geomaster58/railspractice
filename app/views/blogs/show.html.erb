<h1><%= @blog.title %></h1>
<h4><%= @blog.date %></h4>
<p><%= @blog.body %></p>

<% if current_user != nil && current_user == @blog.user %>
  <%= link_to "Delete", blog_path(@blog), method: :delete %>
  <%= link_to "Edit", edit_blog_path(@blog) %>
<% else %>
  <%= link_to "Back", blogs_path %>
<% end %>  
